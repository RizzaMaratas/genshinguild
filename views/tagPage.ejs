<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum - <%=forumName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="script.js"></script>
</head>

<body>
    <h1>Forum</h1>

    <div class="auth-links">
        <!-- show welcome message and logout button if user is logged in -->
        <% if (userLoggedIn) { %>
        <span class="welcome-message">Welcome back, <%= username || '' %></span>
        <a href="/logout" class="logout-link">
            <span class="desktop-text">Logout</span>
            <i class="mobile-icon fas fa-sign-out-alt"> </i>
        </a>
        <% } else { %>
        <!-- show login and register links if user is not logged in -->
        <a href="/login" class="login-link">
            <span class="desktop-text">Login</span>
            <i class="mobile-icon fas fa-sign-in-alt"> </i>
        </a>
        <a href="/register" class="register-link">
            <span class="desktop-text">Register</span>
            <i class="mobile-icon fas fa-user-plus"> </i>
        </a>
        <% } %>
    </div>

    <nav class="navigation">
        <a href="/">Home</a>
        <a href="/forum">Forum</a>
        <a href="/about">About</a>
        <a href="/characters">Characters</a>
        <a href="/users">Users</a>
        <div class="dropdown">
            <button class="dropbtn" onclick="toggleMenu()">Menu &#9662;</button>
            <div class="dropdown-content">
                <a href="/">Home</a>
                <a href="/forum">Forum</a>
                <a href="/about">About</a>
                <a href="/createthread">Create Post</a>
                <a href="/characters">Characters</a>
                <a href="/users">Users</a>
                <a href="/search">Search</a>
                <a href="/weather">Weather</a>
                <a href="/tvShows">TV Shows</a>
                <a href="/api">Api</a>
            </div>
        </div>
    </nav><br>
    <nav class="navigation">
        <a href="/search">Search</a>
        <a href="/weather">Weather</a>
        <a href="/tvShows">TV Shows</a>
        <a href="/api">Api</a>
    </nav>

    <h2>Tag: <%= tag %></h2>
    <!-- display the list of threads with the same tag -->
    <% if (threads.length > 0) { %>
    <ul>
        <% threads.forEach(function(thread) { %>
        <li>
            <h3>Title: <a href="/forum/<%= thread.id %>"><%= thread.title %></a>
            <p>Posted by: <%= thread.username %></p>
        </h3>
        </li>
        <% }); %>
    </ul>
    <% } else { %>
    <p>No threads found with this tag.</p>
    <% } %>
</body>

</html>